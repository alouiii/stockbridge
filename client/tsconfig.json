{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "useDefineForClassFields": true,
    "esModuleInterop": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "ESNext",
    "jsx": "react",
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
